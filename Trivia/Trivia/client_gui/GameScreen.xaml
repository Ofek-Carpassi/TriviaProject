<Page x:Class="client_gui.GameScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client_gui"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Game">

    <Grid Background="#F0F0F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,20,0,10">
            <TextBlock Text="Trivia Game" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="QuestionNumberText" 
                      Text="Question 1/10" 
                      FontSize="18"
                      Margin="0,5,0,0"
                      HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Question and Answers -->
        <Grid Grid.Row="1" Margin="40,10,40,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Question -->
            <Border Grid.Row="0" 
                    Background="#FFFFFF" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                <TextBlock x:Name="QuestionText" 
                           Text="Loading question..." 
                           TextWrapping="Wrap"
                           FontSize="20"/>
            </Border>

            <!-- Answers -->
            <StackPanel Grid.Row="1" x:Name="AnswersPanel">
                <!-- Answer buttons will be added here programmatically -->
            </StackPanel>
        </Grid>

        <!-- Timer -->
        <Border Grid.Row="2" 
                Background="#FFFFFF" 
                CornerRadius="8" 
                Padding="10" 
                Margin="40,10,40,20"
                BorderBrush="#DDDDDD"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ProgressBar x:Name="TimerProgressBar" 
                             Grid.Column="0"
                             Height="20"
                             Value="100"
                             Foreground="#3498DB"/>

                <TextBlock x:Name="TimerText" 
                           Grid.Column="1"
                           Text="20s" 
                           FontSize="16"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>