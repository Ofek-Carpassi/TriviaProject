<Page x:Class="client_gui.CreateRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client_gui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateRoom">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Create Room" FontSize="28" FontWeight="Bold" TextAlignment="Center" Margin="0 0 0 30"/>

            <TextBlock Text="Room Name:" FontSize="16" Margin="0 0 0 5"/>
            <TextBox x:Name="RoomNameTextBox" Height="30" Margin="0 0 0 15"/>

            <TextBlock Text="Time per Question (sec):" FontSize="16" Margin="0 0 0 5"/>
            <TextBox x:Name="TimeTextBox" Height="30" Margin="0 0 0 15"/>

            <TextBlock Text="Max Players:" FontSize="16" Margin="0 0 0 5"/>
            <TextBox x:Name="PlayersTextBox" Height="30" Margin="0 0 0 15"/>

            <TextBlock Text="Question Count:" FontSize="16" Margin="0 0 0 5"/>
            <TextBox x:Name="QuestionCountTextBox" Height="30" Margin="0 0 0 30"/>

            <Button Content="Create Room" Height="40" Click="CreateRoom_Click"/>
        </StackPanel>
    </Grid>
</Page>