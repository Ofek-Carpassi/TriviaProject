<Page x:Class="client_gui.HeadToHead"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client_gui"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Head to Head Mode"
      Unloaded="Page_Unloaded">

    <Grid Background="#F0F0F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,30,0,20">
            <TextBlock Text="Head to Head Mode" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>

            <TextBlock x:Name="StatusText"
                       Text="Waiting for an opponent..."
                       FontSize="22"
                       Margin="0,15,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content / Waiting Animation -->
        <Grid Grid.Row="1">
            <StackPanel x:Name="WaitingPanel" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Height="15" 
                             Width="200" 
                             Margin="0,20,0,20"/>

                <TextBlock Text="Players in queue: 0" 
                           x:Name="QueueCountText"
                           HorizontalAlignment="Center" 
                           FontSize="16"/>

                <Border x:Name="CountdownBorder" 
                        Background="#3498DB" 
                        Width="200" 
                        Height="200" 
                        CornerRadius="100"
                        Visibility="Collapsed"
                        Margin="0,30,0,0">
                    <TextBlock x:Name="CountdownText" 
                               Text="5" 
                               FontSize="84" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,40">
            <Button Content="Cancel" 
                    x:Name="CancelButton"
                    Width="150" 
                    Height="40"
                    Click="Cancel_Click"
                    Background="#E74C3C"
                    Foreground="White"
                    Margin="10,0"/>
        </StackPanel>
    </Grid>
</Page>