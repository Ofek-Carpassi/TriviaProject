<Page x:Class="client_gui.JoinRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client_gui"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Join Room">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}" 
                Padding="30,20"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <!-- Back Button -->
                <Button Content="← Back" 
                       HorizontalAlignment="Left"
                       Style="{StaticResource ModernButtonStyle}"
                       Padding="15,8"
                       FontSize="14"
                       Click="BackButton_Click"/>
                
                <TextBlock Text="Available Rooms" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource TextPrimaryBrush}"
                          HorizontalAlignment="Center"/>
                
                <Button Content="🔄 Refresh" 
                       HorizontalAlignment="Right"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Padding="20,10"
                       FontSize="14"
                       Click="RefreshButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Rooms List -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="40,30">
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="16" 
                    Padding="30"
                    MinHeight="400">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="315" 
                                    ShadowDepth="3" 
                                    BlurRadius="10" 
                                    Opacity="0.1"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="🏠 Game Rooms" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,30"/>
                    
                    <ListBox x:Name="RoomsListBox" 
                            BorderThickness="0"
                            Background="Transparent"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,0,0,15"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{StaticResource BackgroundBrush}"
                                                   CornerRadius="8"
                                                   Padding="20,15"
                                                   BorderBrush="{StaticResource BorderBrush}"
                                                   BorderThickness="1"
                                                   Cursor="Hand">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <ContentPresenter Grid.Column="0" 
                                                                     VerticalAlignment="Center"/>
                                                </Grid>
                                                
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F0F8FF"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        
                        <!-- Default content when empty -->
                        <ListBoxItem>
                            <StackPanel>
                                <TextBlock Text="Loading rooms..." 
                                          FontSize="18" 
                                          FontWeight="Medium"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Please wait..." 
                                          FontSize="14" 
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                    
                    <!-- No Rooms Message -->
                    <Border x:Name="NoRoomsMessage" 
                           Visibility="Collapsed"
                           Background="{StaticResource BackgroundBrush}"
                           CornerRadius="8"
                           Padding="30,20"
                           Margin="0,20,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="🚫" 
                                      FontSize="48" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,0,0,15"/>
                            <TextBlock Text="No rooms available" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      HorizontalAlignment="Center" 
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Try creating a new room or refreshing the list" 
                                      FontSize="14" 
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>