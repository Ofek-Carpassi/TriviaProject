<Page x:Class="client_gui.Room"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client_gui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Room">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Room Lobby" FontSize="28" FontWeight="Bold" TextAlignment="Center" Margin="0 0 0 20"/>

            <TextBlock x:Name="RoomNameText" Text="Room: TriviaMaster" FontSize="18" TextAlignment="Center" Margin="0 0 0 10"/>

            <TextBlock Text="Admin:" FontWeight="Bold" Margin="0 10 0 0"/>
            <TextBlock x:Name="AdminNameTextBlock" FontSize="16" Foreground="DarkBlue" Margin="0 0 0 10"/>

            <TextBlock Text="Players:" FontWeight="Bold" Margin="0 5 0 5"/>
            <ListBox x:Name="PlayersListBox" Height="200" Margin="0 0 0 20"/>

                <Button Content="Start Game" x:Name="StartGameButton" Width="120" Height="35" Margin="10 0" Click="StartGameButton_Click"/>
            </StackPanel>
    </Grid>
</Page>
