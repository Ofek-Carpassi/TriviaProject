<Page x:Class="client_gui.AddQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client_gui"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Add New Question">

    <Grid Background="#F0F0F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,20,0,10">
            <TextBlock Text="Add New Question" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Question Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,10,50,10">
                <!-- Question Text -->
                <TextBlock Text="Question:" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,10,0,5"/>
                <TextBox x:Name="QuestionTextBox" 
                         Height="80" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True" 
                         Padding="10"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Correct Answer -->
                <TextBlock Text="Correct Answer:" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,5"
                           Foreground="Green"/>
                <TextBox x:Name="CorrectAnswerTextBox" 
                         Height="50" 
                         Padding="10"
                         FontWeight="SemiBold"/>

                <!-- Wrong Answers -->
                <TextBlock Text="Wrong Answer #1:" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,5" 
                           Foreground="#D32F2F"/>
                <TextBox x:Name="WrongAnswer1TextBox" 
                         Height="50" 
                         Padding="10"/>

                <TextBlock Text="Wrong Answer #2:" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,5" 
                           Foreground="#D32F2F"/>
                <TextBox x:Name="WrongAnswer2TextBox" 
                         Height="50" 
                         Padding="10"/>

                <TextBlock Text="Wrong Answer #3:" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,5" 
                           Foreground="#D32F2F"/>
                <TextBox x:Name="WrongAnswer3TextBox" 
                         Height="50" 
                         Padding="10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,30">
            <Button Content="Submit Question" 
                    Width="150" 
                    Height="40" 
                    Click="SubmitQuestion_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Margin="10,0"/>

            <Button Content="Cancel" 
                    Width="150" 
                    Height="40" 
                    Click="Cancel_Click"
                    Background="#F44336"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Margin="10,0"/>
        </StackPanel>
    </Grid>
</Page>