<Page x:Class="client_gui.HighScores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client_gui"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="High Scores">

    <Page.Resources>
        <local:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}" 
                Padding="30,20"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <!-- Back Button -->
                <Button Content="← Back" 
                       HorizontalAlignment="Left"
                       Style="{StaticResource ModernButtonStyle}"
                       Padding="15,8"
                       FontSize="14"
                       Click="BackButton_Click"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="🏆" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Leaderboard" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- High Scores Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="40,30">
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="16" 
                    Padding="30"
                    MinHeight="400">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="315" 
                                    ShadowDepth="3" 
                                    BlurRadius="10" 
                                    Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="🌟 Top Players" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,30"/>

                    <ItemsControl x:Name="ScoresList" ItemsSource="{Binding TopScores}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BackgroundBrush}"
                                       CornerRadius="8"
                                       Padding="20,15"
                                       Margin="0,0,0,10"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Just leave the rank column empty or put a static # if you want -->
                                        <TextBlock Grid.Column="0"
                                           Text=""
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                        <TextBlock Grid.Column="1"
                                           Text="{Binding Username}"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                           Text="{Binding Score}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Message when no scores available -->
                    <Border x:Name="NoScoresMessage"
                           Visibility="{Binding TopScores.Count, Converter={StaticResource IntToVisibilityConverter}}"
                           Background="{StaticResource BackgroundBrush}"
                           CornerRadius="8"
                           Padding="30,20"
                           Margin="0,20,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📊"
                                FontSize="48"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,15"/>
                            <TextBlock Text="No scores yet"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,10"/>
                            <TextBlock Text="Play some games to see your stats here!"
                                FontSize="14"
                                Foreground="{StaticResource TextSecondaryBrush}"
                                HorizontalAlignment="Center"
                                TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>